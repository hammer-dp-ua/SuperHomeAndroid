<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="envSensor"
            type="ua.dp.hammer.superhome.data.EnvSensor"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/env_sensor_item_value_title_start_margin"
        android:layout_marginEnd="@dimen/card_end_margin"
        android:layout_marginBottom="@dimen/card_bottom_margin"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{envSensor.deviceName}"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_error"
                android:textSize="@dimen/env_sensor_item_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/temperature_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_title_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_title_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_title_bottom_margin"
                    android:width="@dimen/env_sensor_item_value_title_width"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:text="@string/temperature"
                    app:layout_constraintBaseline_toBaselineOf="@+id/temperature_value"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/temperature_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_bottom_margin"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:text="@{envSensor.temperatureString}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/temperature_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="@{envSensor.humidityString == null ? View.GONE : View.VISIBLE}">
                <TextView
                    android:id="@+id/humidity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_title_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_title_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_title_bottom_margin"
                    android:width="@dimen/env_sensor_item_value_title_width"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="@string/humidity"
                    app:layout_constraintBaseline_toBaselineOf="@+id/humidity_value"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/humidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_bottom_margin"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:text="@{envSensor.humidityString}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/humidity_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="@{envSensor.lightString == null ? View.GONE : View.VISIBLE}">
                <TextView
                    android:id="@+id/light_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_title_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_title_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_title_bottom_margin"
                    android:width="@dimen/env_sensor_item_value_title_width"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:text="@string/light"
                    app:layout_constraintBaseline_toBaselineOf="@+id/light_value"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/light_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_bottom_margin"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:text="@{envSensor.lightString}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/light_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="@{envSensor.gainString == null ? View.GONE : View.VISIBLE}">
                <TextView
                    android:id="@+id/gain_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_title_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_title_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_title_bottom_margin"
                    android:width="@dimen/env_sensor_item_value_title_width"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:text="@string/gain"
                    app:layout_constraintBaseline_toBaselineOf="@+id/gain_value"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/gain_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/env_sensor_item_value_start_margin"
                    android:layout_marginTop="@dimen/env_sensor_item_value_top_margin"
                    android:layout_marginBottom="@dimen/env_sensor_item_value_bottom_margin"
                    android:textSize="@dimen/env_sensor_item_text_size"
                    android:text="@{envSensor.gainString}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/gain_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>